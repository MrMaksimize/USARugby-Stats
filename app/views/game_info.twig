<div class="row-fluid game-info-row">
    <div class='span2'>
        <img src='{{ teams.home.logo_url }}' class='img-polaroid logo-picture group-logo-medium' alt='{{ teams.home.short }}' onerror='imgError(this);'></img>
    </div>
    <div class='span3'>
        <h3>
            {% if settings.iframe %}
                {{ teams.home.short }}
            {% else %}
                <a href='team.php?id={{ teams.home.id }}'>{{ teams.home.short }}</a>
            {% endif %}
        </h3>
    </div>

    <div class='span1'>
        <h3> {{ game.home_score }} </h3>
    </div>
    <div class='span1'>
        <h3> {{ game.away_score }} </h3>
    </div>
    <div class='span3'>
        <h3>
            {% if settings.iframe %}
                {{ teams.away.short }}
            {% else %}
                <a href='team.php?id={{ teams.home.id }}'>{{ teams.away.short }}</a>
            {% endif %}
        </h3>
    </div>
    <div class='span2'>
        <img src='{{ teams.away.logo_url }}' class='img-polaroid logo-picture group-logo-medium' alt='{{ teams.away.short }}' onerror='imgError(this);'></img>
    </div>
</div>
<div class="row-fluid game-info-sub-info-row">
    <div class='row-fluid'>
        <div class='span12'>
            <h4>Game: {{ game.comp_game_id }}</h4>
        </div>
    </div>
    <div class='row-fluid'>
        <div class='span12'>
            <h4>Kickoff: {{ game.kickoff|date('F j, Y -- g:i') }} </h4>
        </div>
    </div>
    {% if game.field_num %}
        <div class="row-fluid">
            <div class='span'>
                <h4> Field:
        {% if game.field_num.loc_url %}
            {{ resource.title }} (<a href='{{ resource.loc_url }}' target='_blank'>Map</a>)
        {% else %}
            {{ resource.title }}
        {% endif %}
    </h4>

            </div>
        </div>
    {% endif %}
</div>
{% if settings.edit_check and not settings.iframe %}
    <input type='button' class='edit btn btn-primary' id='eShow' name='eShow' value='Edit Game Info' />
    <input type='hidden' id='game_id' value='${{ game.id }}' />
{% endif %}
